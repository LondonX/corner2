<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_root"/>

    <LinearLayout
        android:id="@+id/activity_log_linearo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".LoginActivity">

        <ProgressBar
            android:id="@+id/activity_log_pb0"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_log_tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/str_log_ing"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_log_tvRetry"
            style="@style/CornerView.Button.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_retry"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>
