<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_settings_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_root"/>

    <RelativeLayout
        android:id="@+id/activity_settings_rlInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_default"
        android:clickable="true"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/activity_settings_tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_info"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/activity_settings_imgInfoGo"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_arrow_right"/>

        <ImageView
            android:id="@+id/activity_settings_imgInfoHead"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/activity_settings_tvInfo"
            android:src="@drawable/img_head_default"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_settings_rlMsg"
        style="@style/CornerView.Layout.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_default"
        android:clickable="true">

        <TextView
            android:id="@+id/activity_settings_tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_msg"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/activity_settings_swMsg"
            style="@style/Base.Widget.AppCompat.CompoundButton.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_settings_rlReddot"
        style="@style/CornerView.Layout.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_default"
        android:clickable="true">

        <TextView
            android:id="@+id/activity_settings_tvReddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_reddot"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/activity_settings_swDot"
            style="@style/Base.Widget.AppCompat.CompoundButton.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_settings_rlClear"
        style="@style/CornerView.Layout.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_default"
        android:clickable="true">

        <TextView
            android:id="@+id/activity_settings_tvClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_clear"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_settings_tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/test_size"
            android:textColor="@color/gray_light"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_settings_rlUpdate"
        style="@style/CornerView.Layout.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_default"
        android:clickable="true">

        <TextView
            android:id="@+id/activity_settings_tvUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_update"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_settings_tvCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_current"
            android:textColor="@color/gray_light"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_settings_rlRate"
        style="@style/CornerView.Layout.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_default"
        android:clickable="true">

        <TextView
            android:id="@+id/activity_settings_tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_settings_rate"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/activity_settings_viewAnchor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/activity_settings_tvExit"
        style="@style/CornerView.Button.Red"
        android:layout_width="match_parent"
        android:translationZ="@dimen/toolbar_z"
        android:layout_height="wrap_content"
        android:text="@string/str_settings_exit"/>

</LinearLayout><!-- From: file:/Users/london/Documents/WorkSpace/corner2/app/src/main/res/layout/activity_settings.xml -->