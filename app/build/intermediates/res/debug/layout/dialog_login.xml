<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_login_root"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/background_floating_material_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_login_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/dialog_title_login"
        android:textSize="16sp"/>

    <View
        android:id="@+id/dialog_login_div0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_div"/>

    <LinearLayout
        android:id="@+id/dialog_login_linear0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_login_linearQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_default"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_login_imgQQ"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/img_login_qq"/>

            <TextView
                android:id="@+id/dialog_login_tvQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_login_qq"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_login_linearWechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/selector_btn_default"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_login_imgWechat"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/img_login_wechat"/>

            <TextView
                android:id="@+id/dialog_login_tvWechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_login_wechat"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_login_linearWeibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_default"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_login_imgWeibo"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/img_login_weibo"/>

            <TextView
                android:id="@+id/dialog_login_tvWeibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_login_weibo"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

