<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_user_rlHead"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:translationZ="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/head_user_imgHead"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/img_head_default"/>

    <LinearLayout
        android:id="@+id/head_user_linearSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/head_user_imgHead"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/head_user_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="160dp"
            android:singleLine="true"
            android:text="@string/test_long"
            android:textSize="22sp"/>

        <ImageView
            android:id="@+id/head_user_imgSex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/img_sex_femal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/head_user_tvLv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_user_linearSex"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/head_user_imgHead"
        android:text="@string/replace_lv"
        android:textSize="12sp"/>

    <ProgressBar
        android:id="@+id/head_user_pbExp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head_user_tvLv"
        android:layout_alignTop="@+id/head_user_tvLv"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/head_user_tvLv"
        android:max="99"
        android:progress="20"
        android:progressDrawable="@drawable/layer_progress"/>

    <TextView
        android:id="@+id/head_user_tvFocus"
        style="@style/CornerView.Button.Small.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/head_user_linearSex"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:text="@string/btn_focus"/>

    <TextView
        android:id="@+id/head_user_tvSign"
        style="@style/CornerView.TextView.Small.DarkGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_user_tvFocus"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/head_user_imgHead"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/test_long"/>

</RelativeLayout><!-- From: file:/Users/london/Documents/WorkSpace/corner2/app/src/main/res/layout/head_user.xml -->