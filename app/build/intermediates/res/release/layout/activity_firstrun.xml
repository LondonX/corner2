<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_firstrun_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light" >

    <ImageView
        android:id="@+id/activity_firstrun_img0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/activity_firstrun_img1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/activity_firstrun_img2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_firstrun_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/activity_firstrun_linearIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/activity_firstrun_viewIndicator0"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/selector_welcome_indicator" />

        <View
            android:id="@+id/activity_firstrun_viewIndicator1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_welcome_indicator" />

        <View
            android:id="@+id/activity_firstrun_viewIndicator2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/selector_welcome_indicator" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/LondonX/Documents/workspace/corner2/app/src/main/res/layout/activity_firstrun.xml -->