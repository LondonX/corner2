<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_ms_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/view_ms_linear"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/img_mapstamp"
        android:orientation="vertical"
        android:padding="1px" >

        <TextView
            android:id="@+id/view_ms_tvName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="12dp"
            android:text="@string/test_long"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_ms_viewDiv0"
            style="@style/CornerView.Divider"
            android:layout_width="180dp"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/view_ms_tvContent"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/test_long"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/view_ms_tvNavigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_ms_linear"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14px"
        android:layout_toRightOf="@+id/view_ms_linear"
        android:background="@color/red"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/str_map_stamp"
        android:textColor="#FFF"
        android:textSize="14sp"
        tools:ignore="PxUsage" />

</RelativeLayout><!-- From: file:/C:/Users/LondonX/Documents/workspace/corner2/app/src/main/res/layout/view_map_stamp.xml -->